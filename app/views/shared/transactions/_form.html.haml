%p
  %label{:for => "account"} Account money from/to:
  = f.select :account_id, @accounts
%p
  %label{:for => "transaction_date"} Date:
  = f.date_select :transaction_date
%p
  %label{:for => "amount"} Amount:
  = f.text_field :amount
%p
  %label{:for => "detail"} Detail:
  = f.text_field :detail
-if @account 
  %p
    %label{:for => "statement_id"} Statement:
    = f.select :statement_id, @account.statements.collect{|s| ["Page: #{s.page_number},  #{s.from_date} - #{s.to_date}",s.id]}
