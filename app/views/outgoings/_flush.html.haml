%div[outgoing]
  %p.source
    %strong outgoinging money from
    = h outgoing.source.title 
  %p.outgoinged_date
    %strong outgoinged date
    = h outgoing.outgoinged_date
  %p.amount
    %strong Amount
    = h outgoing.amount
  %p.detail
    %strong Detail
    = h outgoing.detail

  = link_to 'Show', object_path(outgoing)
  |
  = link_to 'Edit', edit_object_path(outgoing)
  |
  = link_to 'Destroy', object_path(outgoing), :confirm => 'Really destroy outgoing?', :method => :delete

